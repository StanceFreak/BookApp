<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Fragment.ProfileFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <LinearLayout
               android:id="@+id/cv_profile_header"
               android:layout_width="match_parent"
               android:layout_height="150dp"
               android:orientation="vertical"
               android:background="@color/grey"
               android:padding="5dp">

               <TextView
                   android:id="@+id/profile_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="25dp"
                   android:text="@string/user_name"
                   android:layout_gravity="center"
                   android:fontFamily="@font/epilogue_semibold_600"
                   android:textColor="@color/white"
                   android:textSize="22sp"/>

               <TextView
                   android:id="@+id/profile_email"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:text="@string/user_desc"
                   android:layout_gravity="center"
                   android:textAlignment="center"
                   android:fontFamily="@font/epilogue_regular_400"
                   android:textColor="@color/white"
                   android:textSize="16sp"/>

           </LinearLayout>


           <ImageView
               android:id="@+id/profile_wave"
               android:layout_width="match_parent"
               android:layout_height="90dp"
               android:layout_marginTop="0dp"
               android:background="@drawable/ic_wave"
               android:layout_below="@id/cv_profile_header"/>

           <ImageView
               android:id="@+id/profile_pic"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_marginTop="-120dp"
               android:src="@drawable/ic_avatar_profile"
               android:layout_gravity="center"
               android:layout_below="@id/profile_wave"
               android:layout_centerHorizontal="true"/>

        </RelativeLayout>

       <LinearLayout
           android:id="@+id/bottom"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_below="@id/top"
           android:padding="15dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="ACCOUNT INFO"
               android:textSize="19sp"
               android:fontFamily="@font/epilogue_semibold_600"
               android:textColor="@color/grey"
               android:layout_marginStart="10dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingStart="10dp"
               android:layout_marginTop="10dp"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_email"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginStart="10dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/profile_email"
                       android:textColor="@color/grey"
                       android:textSize="16sp"
                       android:fontFamily="@font/epilogue_semibold_600" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:text="@string/profile_education"
                       android:textColor="@color/grey"
                       android:textSize="14sp"
                       android:fontFamily="@font/epilogue_regular_400"
                       android:layout_gravity="center"/>

               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:paddingStart="10dp"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:src="@drawable/ic_phone"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginStart="10dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/profile_email"
                       android:textColor="@color/grey"
                       android:textSize="16sp"
                       android:fontFamily="@font/epilogue_semibold_600" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:text="@string/profile_education"
                       android:textColor="@color/grey"
                       android:textSize="14sp"
                       android:fontFamily="@font/epilogue_regular_400"
                       android:layout_gravity="center"/>

               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:paddingStart="10dp"

               android:orientation="horizontal">

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:src="@drawable/ic_education"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginStart="10dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/profile_email"
                       android:textColor="@color/grey"
                       android:textSize="16sp"
                       android:fontFamily="@font/epilogue_semibold_600" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:text="@string/profile_education"
                       android:textColor="@color/grey"
                       android:textSize="14sp"
                       android:fontFamily="@font/epilogue_regular_400"
                       android:layout_gravity="center"/>

               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:paddingStart="10dp"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:src="@drawable/ic_place"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginStart="10dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/profile_email"
                       android:textColor="@color/grey"
                       android:textSize="16sp"
                       android:fontFamily="@font/epilogue_semibold_600" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:text="@string/profile_education"
                       android:textColor="@color/grey"
                       android:textSize="14sp"
                       android:fontFamily="@font/epilogue_regular_400"
                       android:layout_gravity="center"/>

               </LinearLayout>

           </LinearLayout>

           <androidx.cardview.widget.CardView
               android:id="@+id/cv_profile_edit"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               app:cardCornerRadius="5dp"
               android:layout_gravity="center|bottom"
               app:cardElevation="5dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:padding="5dp">

                   <ImageView
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:src="@drawable/ic_edit_purple"
                       android:layout_gravity="center" />

                   <TextView
                       android:layout_marginStart="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/profile_edit"
                       android:fontFamily="@font/epilogue_semibold_600"
                       android:textColor="@color/grey"
                       android:textSize="17sp"
                       android:textAlignment="center"
                       android:layout_gravity="center_horizontal"/>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

       </LinearLayout>

   </RelativeLayout>

</LinearLayout>